<%- include header %>

<div class="container-fluid">

	<script>
        $(function(){
		$(".add").click(function(){
				var holder=$(this);
				var data={};
				var cartno=parseInt($("#cartno").text());
				data.cid=parseInt($("#cid").text());

				$.ajax({
				type:"POST",
				data:JSON.stringify(data),
				contentType: 'application/json',
				url:"/cart",
				success:function(data){
					$("#carttips").text("已添加至购物车");
					holder.remove();
					$("#cartno").text(cartno+1);
				}
				});
		});
	});
    </script>
<div class="row-fluid">
    <div class="col-xs-12">
        <div class="thumbnail">
           <span id="cid" class="hidden"><%= commodity.cid %></span>
           <p><span id="cname"><%= commodity.cname %></span></p>
            <div class="caption">
                <h4>
                    商家：<a href="/u/<%= commodity.name %>"><%= commodity.name %></a>
                </h4>
                <p><%- commodity.cimage %></p>
                <h6>￥<strong><%= commodity.cprice %> 元</strong></h6>
                <span id="carttips" class="tips"></span>
                <a class="add btn btn-danger"><i class="fa fa-shopping-cart"></i>加入购物车</a>
            </div>
        </div>
    </div>
</div>
</div>
<%- include footer %>
